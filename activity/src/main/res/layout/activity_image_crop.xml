<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lance.common.widget.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        app:leftDrawable="@drawable/icon_back"
        app:leftTextColor="@android:color/white"
        app:leftTextSize="14sp"
        app:rightText="@string/common_activity_crop_image_save"
        app:rightTextColor="@android:color/white"
        app:rightTextSize="14sp"
        app:rightVisibility="true"
        app:titleText="@string/common_activity_crop_image_title"
        app:titleTextColor="@android:color/white"
        app:titleTextSize="16sp"/>

    <com.isseiaoki.simplecropview.CropImageView
        android:id="@+id/view_crop_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:scv_background_color="@android:color/white"
        app:scv_crop_mode="fit_image"
        app:scv_frame_color="@color/colorPrimary"
        app:scv_frame_stroke_weight="1dp"
        app:scv_guide_color="@color/colorPrimary"
        app:scv_guide_show_mode="show_always"
        app:scv_guide_stroke_weight="1dp"
        app:scv_handle_color="@color/colorPrimary"
        app:scv_handle_show_mode="show_always"
        app:scv_handle_size="10dp"
        app:scv_min_frame_size="50dp"
        app:scv_overlay_color="@color/half_transparent"
        app:scv_touch_padding="8dp"/>
</LinearLayout>
